<img src="https://images.unsplash.com/photo-1578687595055-d15759a04151?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2250&q=80" alt="" class="homepage-first-image">
<div class="container">
  <% @articles.each do |art| %>
    <%= link_to article_path(art) do %>
    <div class="card-trip">
      <div class="card-trip-infos">
        <img src="https://images.unsplash.com/photo-1578687595055-d15759a04151?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2250&q=80" alt="">
        <div class=>
          <div class="w-100">
            <h2><%= art.title %></h2>
            <p><%= art.caption %></p>
          </div>
          <div class="d-flex align-items-center w-100 card-trip-author">
            <img src="https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2250&q=80" alt=""  class="card-trip-user avatar-bordered">
            <p><%= art.author %></p>
          </div>
        </div>
      </div>
    </div>

    <% end %>
  <% end %>

